- name: gh-release
  type: github-release
  source:
    owner: {{github-org-name}}
    repository: {{github-repo-name}}
    github_api_url: https://github.homedepot.com/api/v3/
    access_token: {{github-token}}

- name: tracker
  type: tracker
  source:
    token: {{tracker-token}}
    project_id: {{tracker-project-id}}
    tracker_url: https://www.pivotaltracker.com

- name: pcf-np
  type: cf
  source:
    api: https://api.run-np.homedepot.com
    username: {{cf-user}}
    password: {{cf-password}}
    organization: {{cf-org}}
    space: {{cf-space}}

- name: build-resource
  type: git
  source:
    uri: {{github-semver-uri}}
    branch: master
    private_key: {{github-private-key}}
  check_every: 300s

- name: master-code-src
  type: git
  source:
    uri: {{github-uri}}
    branch: master
    private_key: {{github-private-key}}

- name: five-minute-timer
  type: time
  source: {interval: 5m}

- name: timestamp
  type: time

- name: build-image
  type: docker-image
  source:
    repository: {{docker-image-repo}}
    tag: {{docker-image-tag}}
